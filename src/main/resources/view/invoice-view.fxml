<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lk.ijse.gdse71.finalproject.controller.InvoiceController"
            prefHeight="400.0" prefWidth="600.0">

    <VBox spacing="10" alignment="TOP_CENTER" style="-fx-padding: 15;">

        <!-- Image at the top -->
        <ImageView fx:id="cardImage" fitWidth="170" fitHeight="100">
            <Image url="https://thumbs.dreamstime.com/b/toyota-aqua-hybrid-car-kasagi-japan-september-compact-mountain-road-also-known-as-prius-c-outside-one-most-fuel-128318250.jpg" />
        </ImageView>

        <!-- Title Label -->
        <Label fx:id="cardTitle" text="Card Title"
               style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

        <!-- Description Label -->
        <Label fx:id="cardDescription" text="This is a sample description for the card. It gives more details about the item."
               wrapText="true"
               style="-fx-font-size: 12px; -fx-text-fill: #666666;"
               maxWidth="170"/>

        <!-- Action Button -->
        <Button fx:id="actionButton" text="Learn More" style="-fx-background-color: #336699; -fx-text-fill: white; -fx-background-radius: 5;"/>

    </VBox>

</AnchorPane>
