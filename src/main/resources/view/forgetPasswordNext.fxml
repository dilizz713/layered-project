<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<AnchorPane fx:id="changePWAnchorPane" prefHeight="400.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gdse71.finalproject.controller.ForgetPasswordOController">
   <children>
      <VBox prefHeight="400.0" prefWidth="500.0">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="147.0" prefWidth="500.0">
               <children>
                  <Label prefHeight="24.0" prefWidth="243.0" text="Enter New Password :">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtNewPw" prefHeight="26.0" prefWidth="188.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="10.0" layoutY="10.0" prefHeight="116.0" prefWidth="500.0">
               <children>
                  <Label prefHeight="24.0" prefWidth="243.0" text="Confirm Password">
                     <HBox.margin>
                        <Insets left="30.0" />
                     </HBox.margin>
                     <font>
                        <Font name="System Bold" size="17.0" />
                     </font>
                  </Label>
                  <TextField fx:id="txtConfirmNewPw" prefHeight="26.0" prefWidth="188.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="138.0" prefWidth="500.0">
               <children>
                  <Button fx:id="btnChangePw" mnemonicParsing="false" onAction="#changePWOnAction" text="Change Password" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
